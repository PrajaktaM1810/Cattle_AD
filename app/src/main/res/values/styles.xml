<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Transparent dialog -->
    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Application Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/LogoBlue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item> <!-- Default white background -->
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- RadioButton -->
    <style name="CustomRadioButtonDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlActivated">@color/LogoBlue</item>
    </style>

    <declare-styleable name="CircleIndicator">
        <attr name="ci_indicator_color" format="color"/>
        <attr name="ci_selected_indicator_color" format="color"/>
    </declare-styleable>


</resources>

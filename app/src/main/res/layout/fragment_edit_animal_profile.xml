<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/lyt_toolbar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/DeleteAnimal"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/big_button"
                android:backgroundTint="@color/delete_option_color"
                android:clipToOutline="true"
                android:visibility="gone"
                android:text="@string/delete_animal_profile"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!--            Pashu Number-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/title_pashu_number"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <ImageView
                    android:id="@+id/pashuImage"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pashunum" />

                <EditText
                    android:id="@+id/AnimalNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bgColor"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:maxLength="12"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <!--            Pashu Type-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_pashu_prakar"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <EditText
                    android:id="@+id/AnimalType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/cowImg"
                    android:background="@color/bgColor"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:maxLength="12"
                    android:paddingStart="15dp"
                    android:textSize="@dimen/txt_14"
                    android:enabled="false"
                    android:focusable="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cowImg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/cowImg"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Pashu Number Image"
                    android:src="@drawable/cow_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/buffaloImg"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/buffaloImg"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Pashu Number Image"
                    android:src="@drawable/buffalo_img"
                    android:layout_marginRight="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--           Pashu Jati -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_pashu_jati"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_form">

                <Spinner
                    android:id="@+id/AnimalJati"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:textSize="@dimen/txt_14" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_pashu_gender"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <EditText
                    android:id="@+id/AnimalGender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/bgColor"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:enabled="false"
                    android:focusable="false"
                    android:paddingStart="4dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <!--            Pashu byat number-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_byat_number"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/pashu_mandi"
                    android:contentDescription="Pashu Number Image" />

                <EditText
                    android:id="@+id/ByatNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bgColor"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:maxLength="1"
                    android:paddingStart="4dp"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <!--            birthdate-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_pashu_birthdate"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <ImageView
                    android:id="@+id/calenderImg"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/calender_img"
                    android:contentDescription="Pashu Number Image" />

                <EditText
                    android:id="@+id/AnimalBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bgColor"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:enabled="false"
                    android:focusable="false"
                    android:layout_gravity="center_vertical"
                    android:maxLength="20"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <!--            FarmerNumber-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_kisan_mobile_number"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/profile_new"
                    android:contentDescription="Pashu Number Image" />

                <EditText
                    android:id="@+id/KisanMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bgColor"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:enabled="false"
                    android:focusable="false"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/passwordtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_password"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:id="@+id/PasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_form">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/password_img" />

                <EditText
                    android:id="@+id/KisanPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bgColor"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/title_pidhi"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/txt_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_mother_number"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <EditText
                    android:id="@+id/MotherNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/bgColor"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:maxLength="12"
                    android:inputType="number"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/title_pahsu_father_number"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form">

                <EditText
                    android:id="@+id/FatherNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@color/bgColor"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="@string/title_generation_2_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_form">

                    <EditText
                        android:id="@+id/Pidhi2Number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:enabled="false"
                        android:focusable="false"
                        android:background="@color/bgColor"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="@string/title_generation_3_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_form">

                    <EditText
                        android:id="@+id/Pidhi3Number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:enabled="false"
                        android:focusable="false"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@color/bgColor"
                        android:gravity="center_vertical"
                        android:maxLength="12"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="@string/title_generation_4_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_form">

                    <EditText
                        android:id="@+id/Pidhi4Number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/black"
                        android:inputType="number"
                        android:enabled="false"
                        android:focusable="false"
                        android:background="@color/bgColor"
                        android:gravity="center_vertical"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="@string/title_generation_5_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_form">

                    <EditText
                        android:id="@+id/Pidhi5Number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/black"
                        android:enabled="false"
                        android:focusable="false"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@color/bgColor"
                        android:gravity="center_vertical"
                        android:maxLength="12"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="@string/title_generation_6_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_form">

                    <EditText
                        android:id="@+id/Pidhi6Number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textColor="@color/black"
                        android:enabled="false"
                        android:focusable="false"
                        android:singleLine="true"
                        android:inputType="number"
                        android:background="@color/bgColor"
                        android:gravity="center_vertical"
                        android:maxLength="12"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                android:background="@drawable/big_button"
                android:clipToOutline="true"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/kisan_info_label"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/txt_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:text="@string/title_kisan_name"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_form"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/profile_new" />

                <EditText
                    android:id="@+id/KisanName"
                    android:layout_width="match_parent"
